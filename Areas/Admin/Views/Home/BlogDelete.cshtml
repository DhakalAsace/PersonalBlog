@model Blog.Models.BlogPost

@{
    ViewData["Title"] = "Delete Blog Post";
}

<h1>@ViewData["Title"]</h1>

<p>Are you sure you want to delete this blog post?</p>

<table class="table">
    <tr>
        <th>ID</th>
        <td>@Model.BlogPostId</td>
    </tr>
    <tr>
        <th>Title</th>
        <td>@Model.BlogPostTitle</td>
    </tr>
    <tr>
        <th>Description</th>
        <td>@Model.BlogPostDescription</td>
    </tr>
    <tr>
        <th>Author</th>
        <td>@Model.BlogPostAuthor</td>
    </tr>
    <tr>
        <th>Date</th>
        <td>@Model.BlogPostDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
    </tr>
</table>

<form asp-action="BlogDelete" asp-controller="Home" asp-area="Admin" method="post">
    <input type="hidden" asp-for="BlogPostId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" asp-controller="Home" asp-area="Admin" class="btn btn-secondary">Cancel</a>
</form>
