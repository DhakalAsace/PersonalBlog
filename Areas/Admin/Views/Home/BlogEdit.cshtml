@model Blog.Models.BlogPost

@{
    ViewData["Title"] = "Edit Blog Post";
}

<h1 class="mt-3">@ViewData["Title"]</h1>

<div class="card mt-4">
    <div class="card-body">
        <form asp-action="BlogEdit" method="post" asp-area="Admin" asp-controller="Home">
            <div class="form-group">
                <label asp-for="BlogPostTitle" class="control-label">Title:</label>
                <input asp-for="BlogPostTitle" class="form-control" />
                <span asp-validation-for="BlogPostTitle" class="text-danger"></span>
            </div>
            <input asp-for="BlogPostId" hidden />


            <div class="form-group">
                <label asp-for="BlogPostDescription" class="control-label">Description:</label>
                <textarea asp-for="BlogPostDescription" class="form-control" rows="4"></textarea>
                <span asp-validation-for="BlogPostDescription" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BlogPostAuthor" class="control-label">Author:</label>
                <input asp-for="BlogPostAuthor" class="form-control" />
                <span asp-validation-for="BlogPostAuthor" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Edit</button>
        </form>
    </div>
</div>
